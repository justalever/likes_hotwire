<div class="max-w-3xl mx-auto px-4 my-16">
  <div class="flex items-center justify-between pb-6 border-b dark:border-slate-700">
    <h1 class="text-3xl font-bold">Posts</h1>
    <div class="flex items-center justify-end">
      <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div id="posts" class="divide-y dark:text-slate-700 mb-10">
    <% @posts.each do |post| %>
      <div class="py-3">
        <%= render post %>

        <%= link_to "View post", post, class: "btn-link inline-block my-3" %>
      </div>
    <% end %>
  </div>

</div>
